{
  "compilerOptions": {
    /* Language & Module */
    "types": [
      "node"
    ],
    "target": "ES2022",
    "module": "Nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Project structure */
    "rootDir": "./src",
    "outDir": "dist",
    "composite": true,
    /* Type checking */
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    /* Output */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src",
    "src/prisma/generated/clientPg"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/prisma.config.ts"
  ]
}